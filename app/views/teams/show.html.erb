<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Users:</strong>
  <ul>
    <% @team.users.each do |user| %>
      <li><%= user.name %></li>
    <% end %>
  </ul>
</p>

<h1>Meetings</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Team</th>
      <th>Content</th>
      <th>Privacy</th>
      <th>Attachment Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team.meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.subject %></td>
        <td><%= Team.find(meeting.team_id).name %></td>
        <td><%= meeting.content %></td>
        <td><%= meeting.privacy %></td>
        <td><%= meeting.attachments.count %></td>
        <td><%= link_to 'Show', team_meeting_path(@team, meeting) %></td>
        <td><%= link_to 'Edit', edit_team_meeting_path(@team, meeting) %></td>
        <td><%= link_to 'Destroy', team_meeting_path(@team, meeting), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %> |
<%= link_to 'New Meeting', new_team_meeting_path(@team) %>
