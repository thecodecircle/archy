<%= form_with(model: document, local: true, class:"doc-meet") do |form| %>
<div class="">
  <% if document.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

    <ul>
      <% document.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <span class="saved">המסמך נשמר!</span>

  <div class="first-details">
    <div class="field flex-auto w-full rising-label">
      <%= form.text_field :title, required: true %>
      <%= form.label :title, "כותרת" %>
    </div>
    <div class="field rising-label">
      <%= form.date_field :date, value: Date.today %>
      <%= form.label :date, "תאריך יצירה" %>
    </div>
    <div class="field rising-labela">
      <%= form.collection_select :tag_list, ActsAsTaggableOn::Tag.all, :name, :name, {prompt: 'בחירת חברי הצוות'}, {multiple: true, class: "select2_tags", style: "width: 100%;", placeholder:"תגיות" }%>
      <%# form.label :tag_list, "תגיות" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :description, "תיאור" %>
    <%= form.rich_text_area :description %>
  </div>

  <div class="field">
    <%= form.label :content, "תוכן" %>
    <%= form.rich_text_area :content %>
  </div>


  <% if @document.attachments.present? %>
  <div class="field">
    <%= form.label :current_attachments, "קבצים מצורפים כרגע:" %>
    <ul>
      <% @document.attachments.all.each do |attachment| %>
      <li class="my-4"><%# image_tag attachment.preview(resize_to_limit: [300, 300]) %></li>
      <li class="my-4"><%= attachment.blob.filename %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="actions">
    <div class="action">
      <%= form.submit "שמירה", class: "p-2 rounded" %>
    </div>
    <div class="field">
      <%= form.label :privacy, "פרטיות" %>
      <% privacy_options = [["פרטי", "personal"], ["פנים תנועתי", "internal"], ["ציבורי", "commons"]] %>
      <%= form.select :privacy, privacy_options %>
    </div>
    <!-- <button type="button" name="button"><i class='material-icons'>attachment</i>קבצים</button> -->
    <!-- <button type="button" name="button"><i class='material-icons'>lock</i>פרטיות</button> -->
    <div class="field">
      <%= form.label :privacy, "קבצים" %>
      <%= form.file_field :attachments, multiple: true %>
      <p style="font-size: 0.8rem">ניתן להעלות קבצי PDF,  אופיס, תמונות, סרטונים והקלטות קוליות</p>
    </div>
  </div>
</div>
<% end %>

<script>
  var changes = 0
  var id = null
  var description
  var content
  var time_idle = 0
  $(document).ready(function() {
    $('.select2_tags').select2({
      tags: true,
      tokenSeparators: [','],
      placeholder: 'תגיות'
    });
  });
  $("trix-editor").css('border-top', 'none');
  $("trix-editor").focus(function(event) {
    $(event.target).closest('.field').find('.trix-button-row').css("display", "flex")
    $(event.target).addClass('focused')
  });
  $("trix-editor").blur(function(event) {
    $(event.target).closest('.field').find('.trix-button-row').css("display", "none")
    $(event.target).removeClass('focused')
  });
  $("trix-editor").on('trix-change', function(event) {
    changes++
    time_idle = 0
    if (changes >= 10) {
      changes = 0
      if (id != null) {
        $.ajax({
          type: "PUT",
          url: "/documents/" + id + "",
          data: $("form").serialize(),
          success: function(data) {
            console.log(data);
            event.preventDefault()
            after_save()
          }
        })
      }
      else if (<%= action_name == "edit" %>) {
        id = <%= params[:id] %>
        $.ajax({
          type: "PUT",
          url: "/documents/" + id + "",
          data: $("form").serialize(),
          success: function(data) {
            console.log(data);
            event.preventDefault()
            after_save()
          }
        })
      }
      else if ($("input#document_title").val() != '') {
        $.ajax({
          type: "POST",
          url: "/documents",
          data: $("form").serialize(),
          success: function(data) {
            event.preventDefault()
            console.log(data);
            id = data.id
            after_save()
          }
        })
      }

    }
  });

  setInterval(function () {
    if (id != null && (description != $("trix-editor#document_description").val() || content != $("trix-editor#document_content").val())) {
      $.ajax({
        type: "PUT",
        url: "/documents/" + id + "",
        data: $("form").serialize(),
        success: function(data) {
          event.preventDefault()
          console.log(data);
          after_save()
        }
      })
    }else {
      time_idle = time_idle + 5000
      console.log("time_idle: " + time_idle);
    }
    if (time_idle >= 60000) {
      // $("form").submit()
    }
  }, 5000);

  after_save = () => {
    description = $("trix-editor#document_description").val()
    content = $("trix-editor#document_content").val()
    $(".saved").addClass('show')
    setTimeout(function () {
      $(".saved").removeClass('show')
    }, 1000);
  }
</script>
