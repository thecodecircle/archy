<h1>משתמשים</h1>

<!--Container-->
<div class="container w-full md:w-4/5 xl:w-3/5  mx-auto px-2 mt-20 text-gray-900">
<!--Card-->
  <div id='recipients' class="p-8 mt-6 lg:mt-0 rounded shadow bg-white">
  	<table id="table" class="stripe hover">
  		<thead>
  			<tr>
  				<th data-priority="1">אימייל</th>
  				<th data-priority="2">שם</th>
  				<th data-priority="3">אדמין?</th>
  				<th data-priority="4">סטטוס</th>
  				<th data-priority="6"></th>
  				<!-- <th data-priority="7"></th>
  				<th data-priority="8"></th> -->
  			</tr>
  		</thead>
  		<tbody>
        <% @users.each do |user| %>
          <tr>
              <td><%= user.email %></td>
              <td><%= user.name %></td>
              <td><%= link_to he_bool[user.admin.to_s.to_sym], toggle_admin_path(clicked_user: user.id) %></td>
              <td><%= link_to he_status[user.status.to_sym], toggle_status_path(clicked_user: user.id) %></td>
              <!-- <td><%# link_to 'הצגה', user %></td>
              <td><%# link_to 'עריכה', edit_user_path(user) %></td> -->
              <td><%= link_to 'מחיקה', destroy_user_path(clicked_user: user.id), method: :delete, data: { confirm: 'בטוח\ה?' } %></td>
          </tr>
        <% end %>
  		</tbody>
  	</table>
  </div>
  <!--/Card-->
</div>
<!--/container-->
