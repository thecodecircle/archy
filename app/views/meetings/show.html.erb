<% if params[:sent] %>
<strong>מייל נשלח בהצלחה</strong>
<% end %>
<p id="notice"><%= notice %></p>

<p>
  <strong>נושא הפגישה:</strong>
  <%= @meeting.subject %>
</p>

<p>
  <strong>צוות:</strong>
  <%= Team.find(@meeting.team_id).name %>
</p>

<p>
  <strong>תוכן הפגישה:</strong>
  <%= @meeting.content %>
</p>

<p>
  <strong>תגיות:</strong>
  <%= @meeting.tag_list %>
</p>

<p>
  <strong>פרטיות:</strong>
  <%= he_privacy[@meeting.privacy.to_sym] %>
</p>

<p>
  <strong>כמות קבצים מצורפים:</strong>
  <%= @meeting.attachments.count %>
</p>

<p>
  <strong>חברי צוות שנכחו בפגישה:</strong>
  <ul>
    <% @meeting.users.each do |user| %>
      <li><%= user.name %></li>
    <% end %>
  </ul>
</p>

<p>
  <strong>קבצים מצורפים:</strong>
  <ul>
    <% @meeting.attachments.each do |attachment| %>
      <% if attachment.image? %>
        <li class="mt-4"><%= image_tag attachment %></li>
      <% elsif attachment.video? %>
        <li class="mt-4"><%= video_tag url_for(attachment), controls: true %></li>
      <% elsif attachment.audio? %>
        <li class="mt-4"><%= audio_tag attachment %></li>
      <% elsif attachment.text? %>
        <li class="mt-4"><p><%= attachment %></p></li>
      <% else %>
        <%= link_to url_for(attachment) do %>
          <li class="mt-4"><%= image_tag attachment.preview(resize_to_limit: [1000, 1000]) %></li>
        <% end %>
      <% end %>
    <% end %>
</ul>
</p>

<br>
<% if @meeting.team.users.ids.include?(current_user.id) || current_user.admin? %>
  <%= link_to 'עריכת הפגישה', edit_team_meeting_path(@meeting), class: "bg-white hover:bg-gray-400 text-blue-600 font-bold py-2 px-4 rounded-full" %>
  <%= link_to 'מחיקת הפגישה', team_meeting_path(@meeting), method: :delete, data: { confirm: 'בטוח\ה?' }, class: "bg-white hover:bg-gray-400 text-blue-600 font-bold py-2 px-4 rounded-full" %>
  <%= link_to 'שליחת הפגישה במייל לחברי הצוות', send_meeting_path(meeting: @meeting.id, user: current_user.id), class: "bg-white hover:bg-gray-400 text-blue-600 font-bold py-2 px-4 rounded-full" %>
<% end %>
<br>
<%# link_to 'Back', meetings_path %>
